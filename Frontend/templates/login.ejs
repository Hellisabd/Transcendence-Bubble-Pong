<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <link rel="stylesheet" href="/Frontend/css/style.css">
        <link rel="stylesheet" href="/Frontend/css/btn.css">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Connexion</title>
</head>
<body>
    <script>
        document.addEventListener("DOMContentLoaded", function() {
          navigateTo("login"); // Appelle la fonction au chargement de la page
        });
      </script>
    <div id="user" style="display: none;"></div>
    <div id="content">
        <h2>Connexion</h2>
        <form onsubmit="login(event)">
            <label for="email">Email :</label>
            <input type="text" id="email" required>
            <br>
            <label for="password">Mot de passe :</label>
            <input type="password" id="password" required>
            <br>
            <button type="submit">Se connecter</button>
        </form>
        <button class="btn" onclick="navigateTo('create_account')">Create Account</button>
    </div>
	<%- include('scripts.ejs') %>
</body>
</html>
