<!DOCTYPE html>
<html lang="en">
<head>
      <meta charset="UTF-8">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <title>Pong Game</title>
      <%- include('links.ejs') %>
</head>
<body class="font-mainFont bg-gradient-to-l from-cyan-800 to-sky-950 min-h-screen">
  <script>
    document.addEventListener("DOMContentLoaded", function() {
      navigateTo("pong_game"); // Appelle la fonction au chargement de la page
      set_up_friend_list();
    });
  </script>
  <div id="content">
    <%- include('navbar.ejs') %>
    <div class="flex flex-col md:flex-row items-center justify-center min-h-screen md:space-x-8 space-y-8">
      <!-- Conteneur du premier canvas avec son bouton -->
      <div class="relative">
          <canvas id="pong_animation" width="1000" height="600"></canvas>
          <button onclick="navigateTo('waiting_room')" 
                  class="absolute top-20 left-1/2 transform -translate-x-1/2
                         bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded press-start-2p-regular">
                         Play Pong
          </button>
          <button onclick="navigateTo('pong_tournament')" 
                  class="absolute bottom-20 left-1/2 transform -translate-x-1/2
                          bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded press-start-2p-regular">
              Pong Tournament
          </button>
      </div>
  
      <!-- Conteneur du deuxiÃ¨me canvas avec son bouton -->
      <div class="relative">
          <canvas id="ping_animation" width="750" height="750"></canvas>
          <button onclick="navigateTo('ping_waiting_room')" 
                  class="absolute top-40 left-1/2 transform -translate-x-1/2
                         bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded press-start-2p-regular">
                  PLAY ping
          </button>
          <button onclick="navigateTo('ping_tournament')" 
                  class="absolute bottom-40 left-1/2 transform -translate-x-1/2
                         bg-pink-500 hover:bg-pink-700 text-white font-bold py-2 px-4 rounded press-start-2p-regular">
                  Tournament ping
          </button>
      </div>
  </div>
  </div>
  <%- include('scripts.ejs') %>
</body>
</html>